{
  "name": "@staffx/api",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tsx watch --env-file=.env.local src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "migrate": "node-pg-migrate up --config node-pg-migrate.config.cjs --migrations-dir db/migrations",
    "migrate:status": "node-pg-migrate up --dry-run --config node-pg-migrate.config.cjs --migrations-dir db/migrations",
    "migrate:down:last": "node-pg-migrate down 1 --config node-pg-migrate.config.cjs --migrations-dir db/migrations"
  },
  "dependencies": {
    "@fastify/cors": "^11.0.0",
    "@modelcontextprotocol/sdk": "^1.19.1",
    "@staffx/agent-runtime": "workspace:*",
    "fastify": "^5.2.1",
    "jose": "^6.1.3",
    "node-pg-migrate": "^7.7.0",
    "yaml": "^2.4.2",
    "pg": "^8.13.1",
    "zod": "^4.1.5",
    "unique-names-generator": "^4.7.1"
  },
  "devDependencies": {
    "@types/pg": "^8.11.11",
    "tsx": "^4.19.2"
  }
}
